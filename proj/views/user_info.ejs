    <!-- Breadcrumb Section Ends Here -->
    <!-- Four Not Four Section Starts Here -->
    <section class="login-section padding-bottom padding-top">
        <div class="container">
            <div class="login-wrapper">
                <h3 class="title">我的信息</h3>
                <form class="login-form" method="post" action="users/Updateuserinfo">
                    <!-- <p style="color: red">${info}</p>
                    <p style="color: red">${info1}</p> -->
                    <div class="form-group">
                        	用户名：<input type="text" name="username" value="<%=user.username%> ">
                    </div>
                    <div class="form-group">
                        	密码：<input type="password" name="password" value="<%=user.password%>">
                    </div>
                    <div class="form-group">
                        	性别：<input type="text" name="sex" value="<%=user.sex%>">
                    </div>
                    <div class="form-group">
                        	身高：<input type="text" name="height" value="<%=user.height%>">
                    </div>
                    <div class="form-group">
                        	体重：<input type="text" name="weight" value="<%=user.weight%>">
                    </div>
                    <div class="form-group">
                        	手机号码：<input type="text" name="phone" value="<%=user.phone%>">
                    </div>
                    
                    
                    
                    <div class="form-group">
                        <input type="submit" value="信息修改">
                    </div>
                </form>
            </div>
        </div>
    </section>
